generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
}

model Website {
  id     String         @id @default(uuid())
  url    String
  alias String
  userId String
  ticks  WebsiteTicks[]
  disabled Boolean @default(false)
}

model Validator {
  id        String         @id @default(uuid())
  publicKey String
  location  String
  ip        String
  ticks     WebsiteTicks[]
}

model WebsiteTicks {
  id          String        @id @default(uuid())
  websiteId   String
  validatorId String
  timestamp   DateTime
  latency     Float
  status      WebsiteStatus
  validator   Validator     @relation(fields: [validatorId], references: [id])
  website     Website       @relation(fields: [websiteId], references: [id])
}

enum WebsiteStatus {
  ONLINE
  DOWN
  UNKNOWN
}
